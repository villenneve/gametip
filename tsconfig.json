{
  "include": [ "src" ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": [ "ESNext", "DOM" ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [ "vite/client" ],
    "paths": {
      "@/*": [ "./src/*" ]
    }
  }
}
